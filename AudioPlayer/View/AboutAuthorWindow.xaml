<Window x:Class="AudioPlayer.View.AboutAuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioPlayer.View"
        mc:Ignorable="d"
        Title="AboutAuthorWindow" Height="450" Width="800">
    <Grid>
        <TextBox FontSize="25" TextWrapping="Wrap" Text="{Binding AboutAuthor}"></TextBox>
        <Button Style="{StaticResource OkButtonStyle}"
                Command="{Binding OkCommand}"
                Content="OK"
                Foreground="{StaticResource SideNavigationBarColor}"
                Grid.Row="3"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="10" Cursor="Hand"/>
    </Grid>
</Window>
